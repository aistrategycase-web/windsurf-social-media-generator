{
    "version": 2,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python"
      },
      {
        "src": "frontend/static/**",
        "use": "@vercel/static"
      },
      {
        "src": "frontend/templates/**",
        "use": "@vercel/static",
        "config": {
          "distDir": "frontend/templates"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "app.py"
      },
      {
        "src": "/static/(.*)",
        "dest": "/frontend/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/templates/$1.html"
      }
    ]
  }